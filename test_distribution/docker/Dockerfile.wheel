# Test wheel installation in clean Ubuntu environment
FROM ubuntu:22.04

# Install Python and pip (simulating a typical user environment)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user (more realistic)
RUN useradd -m -s /bin/bash testuser
USER testuser
WORKDIR /home/testuser

# Set up Python environment
ENV PATH="/home/testuser/.local/bin:$PATH"

# The wheel will be mounted at runtime
VOLUME ["/wheels"]

# Default command - keep container running for testing
CMD ["tail", "-f", "/dev/null"] 